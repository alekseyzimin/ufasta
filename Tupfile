include_rules

CXXFLAGS = -std=c++0x -Wall -Werror -I.
LDFLAGS = -lboost_regex
CMDLINES = hgrep_cmdline.yaggo one_cmdline.yaggo sizes_cmdline.yaggo
MAINS = ufasta.cc hgrep.cc one.cc sizes.cc

: foreach $(CMDLINES)           |> !yaggo |> {cmdlines}
: foreach $(MAINS) | {cmdlines} |> !cxx   |> {mains}
: {mains}                       |> !lxxd  |> ufasta
